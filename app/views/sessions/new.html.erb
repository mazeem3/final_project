<div class="container">

    <div class="col-sm-8"></div>
    <div class="col-sm-4">
        <h1>Please Sign in</h1>

        <div class="well">

            <%= form_tag do %>

            <div class="form-group">
                <%= label_tag :username %>
                <%= text_field_tag :username, params[:username], class: "form-control" %>
            </div>

            <div class="form-group">
                <%= label_tag :password %>
                <%= password_field_tag :password, "", class: "form-control" %>
            </div>

            <div class="form-group">
              <div class="row">
                <div class="col-sm-6">


                    <%= submit_tag "Sign In", class: "btn btn-primary custom-button-width"%>
                  </div>
                  <div class="col-sm-6">

                    <%= link_to 'Sign Up', new_user_path, class: "btn btn-primary custom-button-width" %>
                  </div>

            </div>
          </div>


            <% end %>

        </div>
    </div>
</div>
