<!DOCTYPE html>
<html>
    <head>
        <%= include_gon %>
        <title>Final</title>
        <%= csrf_meta_tags %>
<link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <div class="jumbo">

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">
                        HouSearch</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <% if @current_user %>
                            <li>
                                <a>
                                    <%= link_to 'Sign Out', sign_in_path, method: :delete %>
                                </a>
                            </li>
                        <% else %>
                            <li>
                                <a><%= link_to 'Sign In', sign_in_path %></a>
                            </li>
                            <% end %>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.container-fluid -->
        </nav>
        <header></header>

        <body>

            <%= yield %>
        </body>
    </div>

</html>
